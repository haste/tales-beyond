{
  "name": "Tales Beyond",
  "description": "Replaces D&D Beyond's digital dices with links to TaleSpire",
  "version": "0.13.1",
  "type": "module",
  "scripts": {
    "build": "bun run --bun scripts/build.js",
    "watch": "bun run --bun --watch scripts/watch.js",
    "check": "bun biome check src/ scripts/",
    "check:apply": "bun biome check --apply src/ scripts/"
  },
  "packageManager": "bun@1.1.19",
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "chrome-webstore-upload-cli": "^3.1.0",
    "web-ext": "8.0.0"
  }
}
